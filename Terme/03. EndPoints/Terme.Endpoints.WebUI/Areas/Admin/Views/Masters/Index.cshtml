@model List<DtoMasterBrief>
@inject IResourceManager _resourceManager
@{
    ViewData["Title"] = _resourceManager[SharedResource.Masters];
}

    <div class="container py-4">
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="bg-white rounded border p-2 shadow-sm mb-2">
                    <div class="row">
                        <div class="col-sm-3">
                            <a asp-area="" asp-controller="Master" asp-action="get" asp-route-id="@item.MasterId"><img class="img-fluid" src="@item.PhotoUrl" /></a>
                        </div>
                        <div class="col-sm-9">
                            <a asp-area="" asp-controller="Master" asp-action="get" asp-route-id="@item.MasterId">
                                <h5>@item.FullName</h5>
                            </a>
                            <p class="text-justify text-muted">
                                @Html.Raw(@item.ShortDescription)
                            </p>
                            تعداد آثار: @item.CountProducts
                        </div>
                    </div>    
                </div>
                
            }
        }
        else
        {
           
                @_resourceManager[SharedResource.NoDate]
            
        }

        
    </div>


